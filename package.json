{
  "name": "@malept/eslint-config",
  "version": "2.1.0",
  "description": "Shared ESLint configuration",
  "main": "index.js",
  "scripts": {
    "lint": "prettier --check . && eslint .",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/malept/eslint-config.git"
  },
  "keywords": [
    "eslint",
    "config"
  ],
  "author": "Mark Lee",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/malept/eslint-config/issues"
  },
  "homepage": "https://github.com/malept/eslint-config#readme",
  "files": [
    "*.js",
    "src"
  ],
  "dependencies": {
    "@typescript-eslint/parser": "^7.0.1",
    "eslint-config-prettier": "^9.0.0"
  },
  "peerDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "eslint": ">=8.0.0",
    "eslint-plugin-ava": "^13.0.0",
    "eslint-plugin-import": "^2.25.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-tsdoc": "^0.2.14"
  },
  "peerDependenciesMeta": {
    "@typescript-eslint/eslint-plugin": {
      "optional": true
    },
    "eslint-plugin-ava": {
      "optional": true
    },
    "eslint-plugin-tsdoc": {
      "optional": true
    }
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "eslint-plugin-import": "^2.25.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^14.0.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": "^16.0.0 || >= 18.0.0"
  },
  "funding": [
    {
      "type": "individual",
      "url": "https://github.com/sponsors/malept"
    }
  ],
  "lint-staged": {
    "*.{cjs,js}": "eslint --cache --fix",
    "*.{json,md,yml}": "prettier --write"
  }
}
